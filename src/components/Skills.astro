---
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import ReactJS from "./icons/ReactJS.astro"
import AstroJS from "./icons/AstroJS.astro"
import JavaScript from "./icons/JavaScript.astro"
import TypeScript from "./icons/TypeScript.astro"
import CSS from "./icons/CSS.astro"
import ViteJS from "./icons/ViteJS.astro"

const TAGS = [
  {
    class: "bg-black text-white",
    icon: NextJS,
    name: "Next.js",
  },
  {
    class: "bg-transparent",
    icon: ReactJS,
    name: "React.js",
  },
  {
    class: "bg-[#003159]",
    icon: AstroJS,
    name: "Astro.js",
  },
  {
    class: "",
    icon: ViteJS,
    name: "Vite.js",
  },
  {
    class: "",
    icon: Tailwind,
    name: "Tailwind CSS",
  },
  {
    class: " ",
    icon: CSS,
    name: "CSS",
  },
  {
    class: " ",
    icon: JavaScript,
    name: "JavaScript",
  },
  {
    class: " ",
    icon: TypeScript,
    name: "TypeScript",
  },
]
---

<style>
  .icon-container:hover {
    transform: scale(1.2); /* Ajusta el valor seg√∫n tu preferencia */
  }
</style>

<div class="max-w-screen-xl mx-auto">
  <ul class="flex flex-wrap gap-2 mb-2 ">
    {TAGS.map(({ class: tagClass, icon: Icon, name }) => (
      <li>
        <span
          class={`flex gap-x-1 rounded-full ${tagClass} py-1 px-2 icon-container`}
          title={name}
        >
          <Icon class="size-12 md:size-16" />
        </span>
      </li>
    ))}
  </ul>
</div>
